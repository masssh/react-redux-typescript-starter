{
    "compilerOptions": {
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es5",
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "**/*.spec.ts",
        "node_modules",
        "vendor",
        "public"
    ],
    "compileOnSave": false
}